# Workflow Engine - Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (add to .gitignore)

# ============================================
# SUPABASE CONFIGURATION (REQUIRED)
# ============================================
# Get these values from https://app.supabase.com
# 1. Go to your project → Settings → Database
# 2. Copy Project Reference (SUPABASE_PROJECT_ID)
# 3. Use your database password (SUPABASE_PASSWORD)

SUPABASE_PROJECT_ID=your_project_reference_here
SUPABASE_PASSWORD=your_database_password_here

# Auto-constructed from above
DB_HOST=db.${SUPABASE_PROJECT_ID}.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres

# ============================================
# SERVER CONFIGURATION
# ============================================
SERVER_PORT=8080
QUARKUS_PROFILE=dev
QUARKUS_LOG_LEVEL=DEBUG

# ============================================
# JWT SECURITY
# ============================================
JWT_SECRET=sua-chave-secreta-super-segura-minimo-32-caracteres
JWT_ISSUER=workflow-service
JWT_AUDIENCE=workflow-api
JWT_EXPIRATION_HOURS=24

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# EXTERNAL SERVICES
# ============================================
NOTIFICATION_SERVICE_URL=http://localhost:8081/notify
WORKFLOW_API_URL=http://localhost:8080

# ============================================
# APPLICATION
# ============================================
APP_ENV=development
APP_VERSION=1.0.0
APP_NAME=workflow-service

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=DEBUG
LOG_FILE_PATH=./logs

# ============================================
# SSL/TLS (Production only)
# ============================================
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# ============================================
# DATABASE OPTIMIZATION
# ============================================
DB_INITIAL_SIZE=5
DB_MAX_SIZE=20
DB_IDLE_TIMEOUT=5m
DB_MAX_LIFETIME=30m
HIBERNATE_GENERATION=validate
HIBERNATE_SHOW_SQL=false

# ============================================
# DATABASE BACKUP (Production only)
# ============================================
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE=0 2 * * * (cron format)
# BACKUP_PATH=/backups
