# Workflow Engine - Environment Variables Template
# ============================================
# COPY THIS FILE TO .envrc AND FILL WITH REAL VALUES
# ============================================

# ============================================
# SUPABASE CONFIGURATION
# ============================================
export SUPABASE_PROJECT_ID=your-project-id
export SUPABASE_URL=https://your-project-id.supabase.co

# ============================================
# DATABASE CONNECTION
# ============================================
export DB_HOST=db.your-project-id.supabase.co
export DB_PORT=5432
export DB_NAME=postgres
export DB_USER=your-db-user
export DB_PASSWORD='your-secure-password'

# ============================================
# SERVER CONFIGURATION
# ============================================
export SERVER_PORT=8080
export QUARKUS_PROFILE=dev
export QUARKUS_LOG_LEVEL=DEBUG

# ============================================
# KEYCLOAK CONFIGURATION
# ============================================
export KEYCLOAK_AUTH_SERVER_URL=https://auth.your-domain.com/realms/your-realm
export KEYCLOAK_CLIENT_ID=workflow-engine-dev
export KEYCLOAK_CLIENT_SECRET=your-client-secret
export KEYCLOAK_REALM=your-realm

# ============================================
# CORS CONFIGURATION
# ============================================
export CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# EXTERNAL SERVICES
# ============================================
export NOTIFICATION_SERVICE_URL=http://localhost:8081/notify
export WORKFLOW_API_URL=http://localhost:8080

# ============================================
# APPLICATION
# ============================================
export APP_ENV=development
export APP_VERSION=1.0.0
export APP_NAME=workflow-service

# ============================================
# LOGGING
# ============================================
export LOG_LEVEL=DEBUG
export LOG_FILE_PATH=./logs

# ============================================
# DATABASE OPTIMIZATION
# ============================================
export DB_INITIAL_SIZE=5
export DB_MAX_SIZE=20
export DB_IDLE_TIMEOUT=5m
export DB_MAX_LIFETIME=30m
export HIBERNATE_GENERATION=update
export HIBERNATE_SHOW_SQL=true
